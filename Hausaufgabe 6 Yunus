#include<sstream>// std::stringstream2
#include<iostream>
using namespace std;

intmain () {
	double x = 5.5;
	int i = -13;
	string str = "Gutes Wetter";
	
	stringstream ss;
	ss << x << " " << i << " " << str;
	string result = ss.str();
	cout << "Stringstreamâˆ’String: \"" << result << "\"" << endl;
	double y = 0.0;
	int j = 0;
	ss >> y >> j;
	cout << "Aus Stringstream extrahiert: y=" << y << " j=" << j << endl;
	return 0;
}
